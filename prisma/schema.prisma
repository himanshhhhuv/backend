generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  password        String?
  isEmailVerified Boolean       @default(false)
  role            Role          @default(STUDENT)
  profile        Profile?
  room           Room?         @relation(fields: [roomId], references: [id], onDelete: SetNull)
  roomId         String?
  attendance     Attendance[]
  leaves         Leave[]
  approvedLeaves Leave[]       @relation("ApprovedBy")
  complaints     Complaint[]
  transactions   Transaction[]
  foodOrders     FoodOrder[]   @relation("StudentOrders")
  servedOrders   FoodOrder[]   @relation("ServedBy")
  createdAt      DateTime      @default(now())
}

model Profile {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String   @unique
  name           String
  rollNo         String   @unique
  phone          String
  parentPhone    String?
  photo          String?
  course         String
  year           Int
  address        String?
  // Telegram Bot Integration
  telegramChatId String?  @unique  // Telegram chat ID for bot messaging
  telegramLinkedAt DateTime?       // When the Telegram was linked
}

model Room {
  id       String @id @default(cuid())
  roomNo   String @unique
  floor    Int
  capacity Int
  occupied Int    @default(0)
  students User[]
}

model Attendance {
  id        String           @id @default(cuid())
  student   User             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId String
  date      DateTime
  inTime    DateTime?
  outTime   DateTime?
  status    AttendanceStatus @default(PRESENT)
}

model Leave {
  id           String      @id @default(cuid())
  student      User        @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId    String
  fromDate     DateTime
  toDate       DateTime
  reason       String
  status       LeaveStatus @default(PENDING)
  approvedBy   User?       @relation("ApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull)
  approvedById String?
  createdAt    DateTime    @default(now())
}

model Transaction {
  id          String           @id @default(cuid())
  student     User             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String
  amount      Float
  type        TransactionType
  description String
  date        DateTime         @default(now())
  foodOrder   FoodOrder?
}

// ==================== CANTEEN MENU & ORDERS ====================

model MenuItem {
  id          String       @id @default(cuid())
  name        String
  category    MenuCategory
  price       Float
  unit        String       @default("piece") // piece, plate, glass, bowl, etc.
  isAvailable Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  orderItems  OrderItem[]
}

model FoodOrder {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  student       User        @relation("StudentOrders", fields: [studentId], references: [id], onDelete: Cascade)
  studentId     String
  items         OrderItem[]
  totalAmount   Float
  mealType      MealType
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String      @unique
  servedBy      User?       @relation("ServedBy", fields: [servedById], references: [id], onDelete: SetNull)
  servedById    String?
  createdAt     DateTime    @default(now())
}

model OrderItem {
  id         String   @id @default(cuid())
  order      FoodOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId    String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId String
  itemName   String   // Store name at time of order
  quantity   Int
  unitPrice  Float    // Price at time of order
  subtotal   Float
}

model Complaint {
  id         String          @id @default(cuid())
  student    User            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId  String
  title      String
  description String
  image      String?
  status     ComplaintStatus @default(PENDING)
  resolvedAt DateTime?
}

enum Role {
  STUDENT
  WARDEN
  ADMIN
  CANTEEN_MANAGER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum ComplaintStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
}

enum MenuCategory {
  BREAKFAST
  LUNCH
  DINNER
  SNACKS
  FRUITS
  BEVERAGES
  EXTRAS
}

enum MealType {
  BREAKFAST
  LUNCH
  EVENING_SNACKS
  DINNER
  OTHER
}
